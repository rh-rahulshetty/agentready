name: Update Repomix Output

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  schedule:
    # Run weekly on Mondays at 9 AM UTC
    - cron: '0 9 * * 1'
  workflow_dispatch:
    # Allow manual triggering

permissions:
  contents: write
  pull-requests: write

jobs:
  update-repomix:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Full history for git-based sorting

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Install Repomix
        run: npm install -g repomix

      - name: Generate Repomix output
        run: |
          repomix --verbose
          echo "Generated Repomix output files:"
          ls -lh repomix-output.*

      - name: Check for changes
        id: check_changes
        run: |
          if git diff --quiet repomix-output.*; then
            echo "changed=false" >> $GITHUB_OUTPUT
            echo "No changes detected in Repomix output"
          else
            echo "changed=true" >> $GITHUB_OUTPUT
            echo "Changes detected in Repomix output"
          fi

      - name: Commit and push changes (if on main branch)
        if: steps.check_changes.outputs.changed == 'true' && github.ref == 'refs/heads/main' && github.event_name != 'pull_request'
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'
          git add repomix-output.*
          git commit -m "chore: Update Repomix repository context

          ðŸ¤– Generated with [Repomix](https://github.com/yamadashy/repomix)

          Auto-generated by GitHub Actions on schedule"
          git push

      - name: Comment on PR (if pull request)
        if: steps.check_changes.outputs.changed == 'true' && github.event_name == 'pull_request'
        uses: actions/github-script@v7
        with:
          script: |
            const fs = require('fs');
            const stats = fs.statSync('repomix-output.md');
            const sizeKB = (stats.size / 1024).toFixed(2);

            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: `## ðŸ¤– Repomix Update Available

              This PR modifies repository files. The Repomix context output has been regenerated.

              **Updated File**: \`repomix-output.md\` (${sizeKB} KB)

              The Repomix output provides AI-friendly context for the entire repository. Consider regenerating locally if you need the latest context for AI-assisted development.

              \`\`\`bash
              agentready repomix-generate
              \`\`\`
              `
            });

      - name: Summary
        run: |
          echo "### Repomix Update Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          if [ "${{ steps.check_changes.outputs.changed }}" == "true" ]; then
            echo "âœ… Repomix output updated successfully" >> $GITHUB_STEP_SUMMARY
            ls -lh repomix-output.* | awk '{print "- " $9 ": " $5}' >> $GITHUB_STEP_SUMMARY
          else
            echo "â„¹ï¸ No changes to Repomix output" >> $GITHUB_STEP_SUMMARY
          fi
